package java2;
import java.util.*;
public class sumofdigits {
	public static void main(String[] args) {
		System.out.print("Enter th number :");
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();
		int sum=0;
		while (n!=0)
		{ int rem=n%10;
		sum=sum+rem;
		n=n/10;
		}
		System.out.println("Sum of digits is "+sum);
	}

}
