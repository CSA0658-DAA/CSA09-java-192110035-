package java2;
import java.util.*;
public class nperfectnums {

	public static void main(String[] args) {
		Scanner input=new Scanner(System.in); 
		System.out.print("Enter the number : ");
		int n=input.nextInt(); 
		int sum=0,temp=0; 
		System.out.print("First "+n+" Perfect numbers are :");
		for(int j=2;j<=1000;j++) 
		{ 
		if(n>temp) 
		sum=1; 
		for(int i=2;i<j;i++) 
		{ 
		if(j%i==0) 
		sum=sum+i; 
		} 
		if(sum==j) 
		{ 
		System.out.print(j+" "); 
		temp=temp+1; 
		} 
		} 
	}

}
