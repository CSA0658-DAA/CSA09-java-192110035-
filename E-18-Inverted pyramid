package java2;
import java.util.*;
public class invertedpyramid {
  public static void main(String[] args) {
		Scanner input=new Scanner(System.in); 
		System.out.print("Enter the number : "); 
		int n=input.nextInt(); 
		for(int i=n;i>=1;i--) 
		{ 
		    for(int j=0;j<n-i;j++) 
		    { 
		        System.out.print(" "); 
		    } 
		    for(int k=1;k<=i;k++) 
		    { 
		        System.out.print(" *"); 
		    } 
		    System.out.println(); 
		} 


	}

}
