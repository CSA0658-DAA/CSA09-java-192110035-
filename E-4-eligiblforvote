package java1;
import java.util.*;
public class eligiblforvote {
public static void main(String[] args) {
	int age;
	Scanner s=new Scanner (System.in);
	 System.out.println("Enetr the age ");
	 age=s.nextInt();
	 if (age>=18)
	 { System.out.println("Eligible for vote ");}
	 else 
	 { System.out.println("Not eligible for  vote .\n You are eligible after " );
	 System.out.print(18-age+" years .");}
}
}
