package java1;
import java.util.*;
public class righttriangle {
public static void main(String[] args) {
	int n,i,j,k;
	System.out.print("Enetr the number : ");
	Scanner s=new Scanner (System.in);
	n=s.nextInt();
	for (i=1;i<=n;i++)
	{ for (j=0;j<=n-i;j++)
	  {
		 System.out.print(" ");
		 }
	 for( k=1;k<=i;k++)
		 {
		 System.out.print("* ");
		 }
	 System.out.println();
	}
	}
}
