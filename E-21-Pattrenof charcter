package java2;
import java.util.*;
public class pattrenofchar {
	public static void main(String[] args) {
		Scanner input=new Scanner(System.in); 
		System.out.print("Enetr the Chatcter : "); 
		char c=input.next().charAt(0); 
		System.out.print("Enetr the number : "); 
		int n=input.nextInt(); 
		for(int i=1;i<=n;i++) 
		{ 
		for(int j=1;j<=i;j++) 
		{ 
		System.out.print(c+" "); 
		} 
		System.out.println(); 
		} 

	}

}
